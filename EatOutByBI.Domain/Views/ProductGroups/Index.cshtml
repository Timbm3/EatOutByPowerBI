    ViewBag.Title = "Product Groups";
}

<div>
    @Html.Partial("_ProductsMenu")
</div>



<h2>Produkt Grupper</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table standardMenu">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductGroupName)
        </th>
