
<h2>@ViewBag.Title</h2>

<p data-bind="text: MessageToClient"></p>

<div>
    <div class="form-group">
        <label class="control-label">Customer Name:</label>
        <span class="form-group" data-bind="text: CustomerName"></span>
    </div>
    @*<div class="form-group">
            <label class="control-label">P.O. Number:</label>
            <span class="form-group" data-bind="text: PONumber"></span>
        </div>*@
    <div class="form-group">
        <label class="control-label">Seat:</label>
        <span class="form-group" data-bind="text: SeatPlace"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Employee:</label>
        <span class="form-group" data-bind="text: EmployeeName"></span>
    </div>
    <div class="form-group">
        <label class="control-label">PaymentMethod:</label>
        <span class="form-group" data-bind="text: PaymentMethodId"></span>
        @*<span class="form-group" data-bind="text: PaymentMethodType"></span>*@
    </div>
</div>

<table class="table">
    <tr>
        <th>Product Code</th>
        <th>Quantity</th>
        <th>Unit Price</th>

    </tr>
    <tbody data-bind="foreach: SalesOrderItems">
        <tr>
            <td class="form-group">
                <span class="form-control input-sm" data-bind="text: itemName()"></span>
            </td>
            <td class="form-group">
                <span class="form-control input-sm text-right" data-bind="text: Quantity"></span>
            </td>
            <td class="form-group"><span class="form-control input-sm text-right" data-bind="text: findItem()"></span></td>
        </tr>
    </tbody>
    <tr>
        <td>&nbsp;</td>
        <td class="form-group"><span class="form-control text-right">Total</span></td>
        <td class="form-group"><span class="form-control text-right" data-bind="text: contactsTotal()"></span></td>
    </tr>
</table>

<p>
    <a href='/' class="btn btn-default btn-sm">&laquo; Back to List</a>
</p>
