@model EatOutByBI.Domain.Models.EmailFormModel


@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
@if (User.IsInRole("Admin"))
{

<address>
    One Microsoft Way<br />
    Redmond, WA 98052-6399<br />
    <abbr title="Phone">P:</abbr>
    425.555.0100
</address>

    <address>
        <strong>Support:</strong> <a href="mailto:Support@example.com">Support@example.com</a><br/>
        <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
    </address>
}
else
{
    <address>
        <strong>Support:</strong> <a href="mailto:Support@example.com">Support@example.com</a><br/>
        <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
    </address>
    <div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2253.5947151993832!2d12.997734115929058!3d55.609066880515115!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4653a3f906ddda07%3A0xd160a0109991261b!2sMalm%C3%B6+centralstation!5e0!3m2!1ssv!2sse!4v1480585735813" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>



    <div class="form-horizontal">
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <h4>Send your comments.</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
            </div>

            @* SÄTTER reCaptcha HÄR *@
            <div class="form-group col-md-offset-2 col-md-10">
                <div class="g-recaptcha" data-sitekey="6LfPcxIUAAAAACWFEc2mPQcd1LhSKggLkL5uPOXt"></div>
            </div>
            @* FÖRSTA NYCKEL HÄR *@

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Send" />
                </div>
            </div>
        }


    </div>   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script type="text/javascript" src='https://www.google.com/recaptcha/api.js'>

    </script>
}